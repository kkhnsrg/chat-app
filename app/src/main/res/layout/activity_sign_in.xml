<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SignInActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            android:singleLine="true"
            android:hint="@string/username"
            android:id="@+id/editTextLogin" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/editTextPass"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:singleLine="true"
            android:hint="@string/password"
            android:id="@+id/editTextPass"
            android:inputType="textPassword" app:layout_constraintBottom_toTopOf="@+id/signInButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="@string/sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/signInButton"
            android:textColor="#FFFFFF"
            android:background="@drawable/round_shape_button"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="140dp"
            app:layout_constraintVertical_bias="0.581"
            android:layout_marginStart="140dp"/>
</android.support.constraint.ConstraintLayout>